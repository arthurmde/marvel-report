<div class="container comic-page">
  <div class="row">
    <div class="col-md-4 col-xs-12 col-sm-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><%= @comic.title %></h3>
        </div>
        <div class="panel-body row">
          <div class="col-md-12 col-xs-12 col-sm-12">
            <div class="center">
              <%= image_tag("#{@comic.thumbnail}") %>
            </div>
          </div>
          <div class="caption col-md-12 col-xs-12 col-sm-12">
            <p>
              <strong><%= "Issue:" %></strong>
              <%= @comic.issue %>
            </p>

            <p>
              <strong><%= "Description:" %></strong>
              <%= @comic.description %>
            </p>


            <p>
              <strong><%= "Characters:" %></strong>
              <%= @comic.characters.count %>
            </p>

            <p>
              <strong><%= "Marvel ID:" %></strong>
              <%= @comic.comic_id %>
            </p>

            <p>
              <strong><%= "Pages:" %></strong>
              <%= @comic.pages %>
            </p>

            <p>
              <strong><%= "More Information:" %></strong>
              <span class="label label-primary">
                <%= link_to "Details", @comic.detail_url%>
              </span>
            </p>
          </div>
        </div>
      </div>
    </div>

    <% @comic.characters.each do |character| %>
      <div class="related-character col-md-2 col-xs-6 col-sm-6">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">
              <%= link_to character.name, character_path(character.character_id) %>
            </h3>
          </div>
          <div class="panel-body">
            <div class="center">
              <%= link_to(image_tag("#{character.thumbnail}"), character_path(character.character_id)) %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
