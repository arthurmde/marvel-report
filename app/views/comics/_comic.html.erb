<div class="abstract col-xs-12 col-sm-6 col-lg-4" data-id="<%= comic.id %>">
  <div class="thumbnail">
    <div class="center">
      <%= image_tag("#{comic.thumbnail}") %>
    </div>
    <div class="caption">
      <h3 class="center">
        <%= link_to comic.title, comic_path(comic.id) %>
      </h3>
    </div>
  </div>
</div>